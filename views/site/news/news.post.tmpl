{% extends "site/base/site.base.tmpl" %}

   {% block content %}

          <!-- Page Content -->
          <div class="container">

                 <div class="row">

                        <!-- Blog Entries Column -->
                        <div class="col-md-8">


                               <!-- Blog Post -->

                               <!-- Title -->
                               <h1 class="mt-4">{{ newsItem.title }}</h1>

                               <!-- Author -->
                               <p class="lead">
                                      by
                                      <a href="#">{{ newsItem.author_name }}</a>
                               </p>

                               <hr>

                               <!-- Date/Time -->
                               <p>Posted on {{ newsItem.date }}</p>

                               <hr>

                               <!-- Preview Image -->
                               <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

                               <hr>

                               <!-- Post Content -->
                               <p class="lead">{{ newsItem.content }}</p>

                               <hr>



                        </div>

                        <!-- Sidebar Widgets Column -->
                        <div class="col-md-4">

                               <!-- Side Widget -->
                               <div class="card my-4">
                                      <h5 class="card-header">Side Widget</h5>
                                      <div class="card-body">
                                             You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                                      </div>
                               </div>



                        </div>

                 </div>
                 <!-- /.row -->

          </div>
          <!-- /.container -->



   {% endblock %}