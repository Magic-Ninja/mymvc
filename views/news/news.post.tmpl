{% extends "base/news.base.tmpl" %}

   {% block content %}

          <!-- Title -->
          <h1 class="mt-4">{{ newsItem.title }}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{ newsItem.author_name }}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{ newsItem.date }}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

          <hr>

          <!-- Post Content -->
          <p class="lead">{{ newsItem.content }}</p>

          <hr>

   {% endblock %}